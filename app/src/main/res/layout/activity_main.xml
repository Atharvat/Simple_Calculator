<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3E3E3E"
    tools:ignore="HardcodedText">


    <TextView
        android:textColor="@color/text_color"
        android:id="@+id/equals"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="="
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintWidth_percent="0.25"
        android:clickable="true"
        android:focusable="true"
        android:onClick="calculate"
        />


    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:gravity="center"
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="1"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:gravity="center"
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="2"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/text_color"
/>

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:gravity="center"
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="3"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/equals"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/text_color"
        />

    <TextView
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:text="-"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/text_color"
        />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="4"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="5"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="6"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/into"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="*"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="7"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="8"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="9"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="/"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/into"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/left_bracket"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="("
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/right_bracket"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text=")"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintStart_toEndOf="@+id/left_bracket"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/power"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="^"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintStart_toEndOf="@+id/right_bracket"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="clear"
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="C"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="."
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:onClick="press"
        android:gravity="center"
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:textSize="@dimen/button_text_size"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="textEnd"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:textSize="@dimen/button_text_size"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_color"
        android:autofillHints=""
        android:hint="expression"
        />


</androidx.constraintlayout.widget.ConstraintLayout>